.footer.hl{
  padding-top:1rpx;
  padding-bottom:30rpx;
}

/*0.5px底部*/
.tinyline{ position:relative;clear: both;display: block;width: 100%;}
.tinyline:before{
content: '';
position: absolute;
width: 200%;
height: 1px;
bottom: 0;
border-bottom: 1px solid #dedede;
-webkit-transform-origin: 0 0;
transform-origin: 0 0;
-webkit-transform: scale(.5,.5);
transform: scale(.5,.5);
-webkit-box-sizing: border-box;
box-sizing: border-box
}

/*重写按钮样式*/
button,button::after{border-radius: 0;}
button[type="default"] {color:#999;}
button[type="primary"] {
  background: #129FE7;
}
.button-hover[type="primary"]{
  background: #0E89C8;
}
button:after{border-radius: 0;width: 200%;  
    height:200%;  
    transform: scale(.5, .5);  
}
.clear:after{
  content:"";
  clear:both;
  display:block;
  height:0;
  overflow:hidden;
  visibility:hidden;
}
.fontcolor{
  color:#129FE7;
}
.guide{
  background: #fff;
  padding:20rpx;
  font-size:32rpx;
  font-weight:600;
}
/*示例图模态背景*/
.modal,.codeModal{
  position: fixed;
  width:100%;
  left:0;
