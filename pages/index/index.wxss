/*服务项目  */
#service{
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  flex-flow: row wrap;
  background: #fff;
 position:relative;
}
#service .list{
  width:calc(100% / 3);
  padding:40rpx 0;
  position:relative;
}
#service .list:after{
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  border-right: 1rpx solid #ddd;
  border-bottom:1rpx solid #ddd;
  -webkit-transform-origin: 0 0;
  -moz-transform-origin: 0 0;
  -ms-transform-origin: 0 0;
  -o-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scale(0.5, 0.5);
  -ms-transform: scale(0.5, 0.5);
  -o-transform: scale(0.5, 0.5);
  transform: scale(0.5, 0.5);
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  top: 0;
  left: 0;
}

#service .list.right:after{
  border-right:none;
}
#service .list.bottom:after{
  border-bottom:none;
}
#service .list image{
  width:80rpx;
  height:80rpx;
}
#service .list text{
  display: block;
  font-size:28rpx;
  color:#777;
  margin-top:10rpx;
}
#service .list.btn{
  line-height: 0;
  background: #fff;
}
#service .list.btn text{
  margin-top:42rpx;
}
#service .list.btn:after{
  border: none;
  border-right:1rpx solid #ddd;
}